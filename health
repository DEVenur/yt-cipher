import express from "express";

const app = express();

// Health check
app.get("/health", (req, res) => {
  res.status(200).send("OK");
});

// Porta separada sÃ³ para o servidor web
const PORT = process.env.WEB_PORT || 3000;

app.listen(PORT, () => {
  console.log(`Servidor web rodando na porta ${PORT}`);
});
